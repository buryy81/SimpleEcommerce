<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Magaz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"/>
</head>
<body>
    <header class="main-header">
        <div class="top-header bg-primary text-white py-2">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-geo-alt-fill me-2"></i>
                            <span class="small">Москва</span>
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="small">Доставка до двери завтра</span>
                    </div>
                </div>
            </div>
        </div>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary fs-3" href="/">
                    <i class="bi bi-bag-check-fill"></i> Magaz
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" href="/Product">Каталог</a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        @{
                            var userJson = Context.Session.GetString("User");
                            if (userJson != null)
                            {
                                var user = System.Text.Json.JsonSerializer.Deserialize<SimpleEcommerce.Models.User>(userJson);
                                var pendingTopUpStr = Context.Session.GetString("PendingTopUp");
                                decimal? pendingTopUp = null;
                                if (!string.IsNullOrEmpty(pendingTopUpStr) && decimal.TryParse(pendingTopUpStr, System.Globalization.NumberStyles.Float, System.Globalization.CultureInfo.InvariantCulture, out var pendingAmount))
                                {
                                    pendingTopUp = pendingAmount;
                                }
                                
                                <li class="nav-item me-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="balance-display d-flex align-items-center px-3 py-2 bg-light rounded">
                                            <i class="bi bi-wallet2 text-success me-2"></i>
                                            <span class="fw-bold text-success">@user.Balance.ToString("N0") ₽</span>
                                        </div>
                                        @if (pendingTopUp.HasValue)
                                        {
                                            <div class="pending-topup-badge badge bg-warning text-dark px-2 py-1" style="font-size: 0.75rem; white-space: nowrap;">
                                                <i class="bi bi-hourglass-split me-1"></i>
                                                Ожидается +@pendingTopUp.Value.ToString("N0") ₽
                                            </div>
                                        }
                                    </div>
                                </li>
                                @if (user.Email == "admin@admin.com")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-warning fw-semibold" href="@Url.Action("Index", "Admin")">
                                            <i class="bi bi-shield-check me-1"></i>Админ-панель
                                        </a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-dark" href="@Url.Action("Profile", "Account")">
                                        <i class="bi bi-person-circle me-1"></i> @user.FirstName
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">
                                        Выйти
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-semibold" href="@Url.Action("Login", "Account")">
                                        <i class="bi bi-box-arrow-in-right me-1"></i> Войти
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="footer bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">Magaz</h5>
                    <p class="small text-muted">Интернет-магазин товаров</p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="small mb-0">&copy; 2026 Magaz. Все права защищены.</p>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
