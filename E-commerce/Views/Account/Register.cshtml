@model SimpleEcommerce.Models.User

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Регистрация</h3>
                </div>
                <div class="card-body">
                    @{
                        var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).ToList();
                    }
                    @if (errors.Any())
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in errors)
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }
                    <form method="post" id="registerForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">Имя</label>
                                <input asp-for="FirstName" class="form-control" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">Фамилия</label>
                                <input asp-for="LastName" class="form-control" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Пароль</label>
                            <input asp-for="Password" type="password" class="form-control" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="agreeTerms" name="agreeTerms" value="true">
                                <label class="form-check-label" for="agreeTerms">
                                    Я согласен с <a href="@Url.Action("Terms", "Account")" target="_blank">условиями оферты</a>
                                </label>
                                @{
                                    var termsError = ViewData.ModelState["agreeTerms"]?.Errors?.FirstOrDefault();
                                }
                                @if (termsError != null)
                                {
                                    <div class="text-danger small mt-1 d-block" id="termsError">
                                        @termsError.ErrorMessage
                                    </div>
                                }
                                else
                                {
                                    <div class="text-danger small mt-1 d-none" id="termsError">
                                        Для продолжения регистрации необходимо принять условия пользовательского соглашения
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Зарегистрироваться</button>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                                Уже есть аккаунт? Войти
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registerForm');
            const agreeTermsCheckbox = document.getElementById('agreeTerms');
            const termsError = document.getElementById('termsError');
            
            if (form && agreeTermsCheckbox) {
                // Проверка перед отправкой
                form.addEventListener('submit', function(e) {
                    if (!agreeTermsCheckbox.checked) {
                        e.preventDefault();
                        e.stopPropagation();
                        termsError.classList.remove('d-none');
                        termsError.classList.add('d-block');
                        agreeTermsCheckbox.classList.add('is-invalid');
                        agreeTermsCheckbox.focus();
                        return false;
                    } else {
                        termsError.classList.add('d-none');
                        termsError.classList.remove('d-block');
                        agreeTermsCheckbox.classList.remove('is-invalid');
                    }
                });
                
                // Убираем ошибку при изменении чекбокса
                agreeTermsCheckbox.addEventListener('change', function() {
                    if (this.checked) {
                        termsError.classList.add('d-none');
                        termsError.classList.remove('d-block');
                        this.classList.remove('is-invalid');
                    }
                });
            }
        });
    </script>
}