@model List<SimpleEcommerce.Models.Product>

@{
    ViewData["Title"] = "Каталог товаров";
}

<div class="container mt-4">
    <h1 class="mb-4">Каталог товаров</h1>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text flex-grow-1">@(product.Description ?? "Описание товара")</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h4 text-primary">@product.Price.ToString("N0") ₽</span>
                                <a href="@Url.Action("Details", new { id = product.Id })"
                                   class="btn btn-primary">Подробнее</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>